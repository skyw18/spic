<Window x:Class="spic.Whelp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:spic"
        mc:Ignorable="d"
        Title="Whelp" Height="300" Width="270" Style="{DynamicResource SettingStyle}" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <Grid>        
        <Grid Background="WhiteSmoke">
            <Image Width="87" Height="87" Margin="0,50,0,0" Source="Img/logo.ico" VerticalAlignment="Top"></Image>
            <TextBlock Text="SPIC" Margin="0,50,0,0" TextAlignment="Center" VerticalAlignment="Center"></TextBlock>
            <TextBlock x:Name="tVer" Text="ver 0.1.0" Margin="0,95,0,0" TextAlignment="Center" VerticalAlignment="Center"></TextBlock>
            <Button x:Name="bClose" Content="{StaticResource WClose}" Width="180" Height="43" Click="bClose_Click" Margin="0,187,0,0"></Button>
        </Grid>
        <Grid
            x:Name="TitleBar"
            Height="30"
            VerticalAlignment="Top" Background="White">
            <TextBlock Text="{StaticResource WHelp}" VerticalAlignment="Center" Margin="10,0,0,0"></TextBlock>
        </Grid>
    </Grid>


</Window>
